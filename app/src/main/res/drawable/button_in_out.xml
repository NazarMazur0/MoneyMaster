<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_hovered="false" android:state_activated="false" android:state_active="false" android:state_enabled="false">
        <shape
            android:shape="oval"
            >
            <size android:width="40dp" android:height="40dp"/>
            <solid android:color="?colorPrimary" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_hovered="true" android:state_activated="true" android:state_active="true" android:state_enabled="true">
        <shape
            android:shape="oval"
            >
            <size android:width="40dp" android:height="40dp"/>
            <solid android:color="?colorSecondary" />
        </shape>
    </item>
</selector>
